# tr doesn't grok unicode
####tr "āēīōū" "aeiou" 

awk '{
 	# remove all the macrons
	gsub(/ā/, "A" );
	gsub(/ē/, "E" );
	gsub(/ī/, "I" );
	gsub(/ō/, "O" );
	gsub(/ū/, "U" );

	# collapse spaces
	gsub(/ +/, " ");

	# add line breaks at punctuation
	gsub(/\./, ".\n\n" );
	gsub(/:/, ":\n\n" );
	gsub(/,/, ",\n" );

     	print 
     }'